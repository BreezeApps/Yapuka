{
  "name": "Yapuka",
  "version": "1.0.0",
  "icons": [
    {
      "src": "build/icons/16x16.png",
      "type": "image/png",
      "sizes": "16x16"
    },
    {
      "src": "build/icons/32x32.png",
      "type": "image/png",
      "sizes": "32x32"
    },
    {
      "src": "build/icons/64x64.png",
      "type": "image/png",
      "sizes": "64x64"
    },
    {
      "src": "build/icons/128x128.png",
      "type": "image/png",
      "sizes": "128x128"
    },
    {
      "src": "build/icons/256x256.png",
      "type": "image/png",
      "sizes": "256x256"
    },
    {
      "src": "build/icons/512x512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "build/icons/1024x1024.png",
      "type": "image/png",
      "sizes": "1024x1024"
    }
  ],
  "description": "Application de gestion de taches et listes",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Marvideo2009/Yapuka.git"
  },
  "scripts": {
    "start": "electron .",
    "style": "pnpx tailwindcss -i ./input.css -o style.css --watch",
    "dev": "pnpm run build:css && pnpm start",
    "build:css": "pnpx tailwindcss -i ./input.css -o style.css",
    "build:all": "electron-builder --win --linux",
    "build:": "electron-builder --win",
    "build:Linux": "electron-builder --linux",
    "build:macOS": "electron-builder --mac",
    "deploy:all": "electron-builder --win --linux --publish always",
    "deploy:": "electron-builder --win --publish always",
    "deploy:Linux": "electron-builder --linux --publish always",
    "deploy:macOS": "electron-builder --mac --publish always"
  },
  "keywords": [],
  "author": {
    "name": "Marcel Demange",
    "email": "dem9ngemarcel@laposte.net",
    "url": "https://github.com/Marvideo2009"
  },
  "license": "ISC",
  "dependencies": {
    "electron-context-menu": "^4.0.4",
    "electron-tabs": "^1.0.4",
    "electron-updater": "^6.3.9",
    "i18next": "^23.16.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-fs-backend": "^2.3.2",
    "mysql2": "^3.11.3",
    "os": "^0.1.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.13"
  },
  "build": {
    "appId": "fr.marvideo.yapuka",
    "compression": "maximum",
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ],
      "artifactName": "${productName}-Setup-${os}.${ext}"
    },
    "win": {
      "artifactName": "${productName}-Setup-${os}.${ext}"
    },
    "extraFiles": [
      {
        "from": "Yapuka_Data",
        "to": "Yapuka_Data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Marvideo2009",
        "repo": "Yapuka",
        "releaseType": "release"
      }
    ]
  }
}
