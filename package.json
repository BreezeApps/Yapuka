{
  "name": "Yapuka",
  "homepage": "https://yapuka.marvideo.fr",
  "version": "1.0.0",
  "icons": [
    {
      "src": "build/icons/16x16.png",
      "type": "image/png",
      "sizes": "16x16"
    },
    {
      "src": "build/icons/32x32.png",
      "type": "image/png",
      "sizes": "32x32"
    },
    {
      "src": "build/icons/64x64.png",
      "type": "image/png",
      "sizes": "64x64"
    },
    {
      "src": "build/icons/128x128.png",
      "type": "image/png",
      "sizes": "128x128"
    },
    {
      "src": "build/icons/256x256.png",
      "type": "image/png",
      "sizes": "256x256"
    },
    {
      "src": "build/icons/512x512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "build/icons/1024x1024.png",
      "type": "image/png",
      "sizes": "1024x1024"
    }
  ],
  "description": "Application de gestion de taches et listes",
  "main": "./out/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Marvideo2009/Yapuka.git"
  },
  "scripts": {
    "start": "electron-vite dev",
    "build": "electron-vite build",
    "start-alt": "electron .",
    "style": "pnpx tailwindcss -i ./input.css -o style.css --watch",
    "dev": "pnpm run build:css && pnpm start",
    "build:css": "pnpx tailwindcss -i ./input.css -o style.css",
    "build:all": "electron-builder --win --linux",
    "build:": "electron-builder --win",
    "build:Linux": "electron-builder --linux",
    "build:macOS": "electron-builder --mac",
    "deploy:all": "electron-builder --win --linux --publish always",
    "deploy:": "electron-builder --win --publish always",
    "deploy:Linux": "electron-builder --linux --publish always",
    "deploy:macOS": "electron-builder --mac --publish always"
  },
  "keywords": [],
  "author": {
    "name": "Marvideo",
    "email": "marvideomc.pro@gmail.com",
    "url": "https://github.com/Marvideo2009"
  },
  "license": "ISC",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "better-sqlite3": "^11.5.0",
    "dotenv": "^16.4.5",
    "electron-context-menu": "^4.0.4",
    "electron-save-file": "^1.0.2",
    "electron-tabs": "^1.0.4",
    "electron-updater": "^6.3.9",
    "electron-vite": "^2.3.0",
    "fs-extra": "^11.2.0",
    "i18next": "^23.16.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-fs-backend": "^2.3.2",
    "kysely": "^0.27.4",
    "libsql": "^0.4.7",
    "mysql2": "^3.11.4",
    "os": "^0.1.2",
    "postcss-load-config": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "vite": "^5.4.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^32.2.3",
    "electron-builder": "^25.1.8",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14"
  },
  "build": {
    "appId": "fr.marvideo.yapuka",
    "compression": "maximum",
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ],
      "artifactName": "${productName}-Setup-${os}.${ext}"
    },
    "win": {
      "artifactName": "${productName}-Setup-${os}.${ext}"
    },
    "extraFiles": [
      {
        "from": "Yapuka_Data",
        "to": "Yapuka_Data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Marvideo2009",
        "repo": "Yapuka",
        "releaseType": "release"
      }
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
