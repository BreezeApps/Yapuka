{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yapuka",
  "version": "0.1.0",
  "identifier": "fr.breezeapps.yapuka",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:tasks.db"]
    },
    "updater": {
        "endpoints": ["RAW GITHUB URL OF THE latest.json FILE OR RAW URL OF THE GITHUB GIST"],
        "pubkey": "THE_PUBLIC_KEY_GENERATED_BY_UPDATER"
      }
  },
  "app": {
    "windows": [
      {
        "devtools": false,
        "title": "Yapuka",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "fr-FR"
      }
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
