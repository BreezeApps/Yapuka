{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Yapuka",
  "version": "0.8.0",
  "identifier": "fr.breezeapps.yapuka",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:tasks.db"]
    },
    "updater": {
        "active": true,
        "windows": {
          "installMode": "passive"
        },
        "endpoints": ["https://github.com/BreezeApps/Yapuka/releases/latest/download/latest.json"],
        "dialog": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ1QkFCNDI4OUE2QTYyNjMKUldSalltcWFLTFM2MVhrTTR4ZkZZZFhZWWVlMVN6b2J0dUw0b05IS3NhSVlHbHpTbER4dWFpaUsK"
      }
  },
  "app": {
    "windows": [
      {
        "devtools": true,
        "title": "Yapuka",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "nsis", "msi", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Gestionnaire de tâches moderne et rapide.",
    "longDescription": "Yapuka est une application open-source permettant de gérer facilement ses tâches avec une interface moderne et fluide.",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.0-37", "libgtk-3-0"]
      }
    },
    "externalBin": [],
    "copyright": "Copyright © 2025 BreezeApps",
    "license": "",
    "createUpdaterArtifacts": true,
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "fr-FR"
      }
    }
  }
}
